- article_image ||= ""
- article_title ||= ""
- article_url ||= ""
- article_text ||= ""
- article_category ||= "news"

- case article_category
- when "news"
  - label_color = @color__red
  - label_text = "NEWS"
- when "politics"
  - label_color = @color__blue
  - label_text = "POLITICS"
- when "culture"
  - label_color = @color__brown
  - label_text = "CULTURE"
- else
  - label_color = @color__red
  - label_text = "NEWS"

%table{ cellpadding: 0, cellspacing: 0 }
  %tr
    %td{ align: "center" }
      = link_to article_url do
        = email_image(article_image, article_title, "100%")
  %tr
    %td{ align: "center" }
      = partial "/partials/image_label", locals: { label: label_text, color: label_color }
  = vertical_padding(20)
  %tr
    %td{ align: "left" }
      = link_to article_url, class: "mob-heading-2", style: "#{@font__heading_2} text-decoration: none;" do
        = article_title
  = vertical_padding(20)
  %tr
    %td.mob-copy{ align: "left", style: @font__copy }
      = article_text
      = link_to article_url, class: "mob-copy", style: "#{@font__copy} color: #{@color__blue}; text-decoration: none;" do
        Read more...
  = vertical_padding(130, "mob-height-60")